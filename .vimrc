syntax off

filetype on
filetype plugin indent on
filetype plugin on

set tabstop=8
set softtabstop=8
set shiftwidth=8
set shiftround
set expandtab
set number

" weird switch case indenting fix
set cinoptions+=:0

" backspace like a normal editor, please
set backspace=indent,eol,start

highlight LineNr ctermfg=gray
