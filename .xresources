! fonts
xterm*faceName:          xft:DejaVu Sans Mono:size=8
xterm*forceBoxChars:     true

! screen
!Xft.dpi:                 120
!Xft.lcdfilter:           lcddefault
!Xft.hintstyle:       	 hintnone
!Xft.autohint:		 false
!Xft.hinting:		 true
!Xft.antialias:		 true
!Xft.rgba:		 rgb

! padding
xterm*internalBorder:	 10
xterm*scaleHeight:       1.01

! scrollage
xterm*scrollbar*width:	 20
xterm*saveLines:         10000
xterm*scrollBar:         true

! cursor
xterm*cursorBlink:       true
xterm*pointerShape:	 

! colors
xterm*background:        #ffffff
xterm*foreground:        #333333
xterm*cursorColor:       #00bfff
xterm*colorUL:           #ffffff

